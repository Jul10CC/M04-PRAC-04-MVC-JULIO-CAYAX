@model MyLogin.Usuarios
@{
    ViewBag.Title = "Login";
}
<!doctype html>
<html lang="en">
<head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Titillium+Web:300,400,600i,700&display=swap" rel="stylesheet">
    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <!--Bootstrap CSS-->
    <title>Bootstrap</title>
</head>
<style type="text/css">
    #form {
        width: 60%;
        border: 1px solid #ccc;
        margin: 40px;
        padding: 120px;
        background: #FFFAF9;
        margin: 120px 0px 0px 250px;
    }

    label {
        font-size: 17px;
        display: block;
        width: 100%;
        font-weight: bold;
        color: darkblue;
    }

    input {
        margin-bottom: 20px;
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        border: 1px solid #ccc;
    }

        input:focus {
            border: 1px solid #1668C4;
        }

        input[type="submit"] {
            margin-bottom: 0;
            background: #1668C4;
            color: #332410;
            border: none;
        }

            input[type="submit"]:hover {
                background: #4A88F4;
                cursor: pointer;
            }

    #titulo {
        font-family: 'Lobster', cursive;
        font-family: 'Zen Loop', cursive;
        color: #3D1C0A;
        font-size: 40px;
        text-align: center;
    }

    #nombre {
        font-family: Consolas;
        font-weight: bold;
        color: darkred;
        text-align: center;
        font-size: 15px;
    }
    #separacion1{
    color: green;
    background-color: #e4db72;      	
    }
    #label {
        color: #202124;
    }
</style>
<body background="https://www.debt.com/wp-content/uploads/2020/12/slide-1_637308847_SasinTipchai.jpg">
    <div id="form">
        <h1 id="titulo">Entregas Rapidito</h1>
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            //this  is for create form tag
            @Html.AntiForgeryToken() // this is for prevent CSRF attack
            @Html.ValidationSummary(true)
            if (@ViewBag.Message != null)
            {
                <div style="border: 1px solid red">
                    @ViewBag.Message
                </div>
            }
            <table>
                <tr>
                    <td><label>Username: </label></td>
                    <td>@Html.TextBoxFor(a => a.NombreUsuario)</td>
                    <td>@Html.ValidationMessageFor(a => a.NombreUsuario)</td>
                </tr>
                <tr>
                    <td><label for="label">Password: </label></td>
                    <td>
                        @Html.PasswordFor(a => a.Password)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(a => a.Password)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <br>
                        <input type="submit" value="Empezar">
                        <br>
                        <br>
                        <br>
                        <a class="btn btn-success" href="https://localhost:44340/Usuarios/Create" role="button">Crear Cuenta</a>
                    </td>
                    <td></td>
                </tr>
            </table>
        }
    </div>
    
    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>
</html>