    <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
    <!--Bootstrap CSS-->
    <title>Bootstrap</title>
</head>
<style type="text/css">
    body {
        font-family: 'Titillium Web', sans-serif;
    }

    .navbar {
